<html style="font-size: 15px">
  <head>
    <style>
      .Page {

        --space-1: 2px;
        --space-2: 4px;
        --space-3: 6px;
        --space-4: 8px;
        --space-5: 12px;
        --space-6: 16px;
        --space-7: 20px;
        --space-8: 24px;
        --space-9: 28px;
        --space-10: 32px;
        --space-11: 40px;
        --space-12: 48px;

        width: 8.5in;
        height: 11in;

        padding: 1.2cm;
        margin: 0em;

        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
        line-height: 1.1;

        word-wrap: break-word;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: var(--space-5);
      }

      @media only screen {
        .Page {
          border-style: solid;
        }

        body {
          margin: 0;
        }
      }

      @media only print {
        @page {
          size: 8.5in 11in;
          margin: 0;
        }

        html {
          margin: 0;
          height: 100%;
        }

        .Page {
          margin: 0;
          padding: 0;
          height: 100%;
          gap: none;
        }
      }

      .Page h1,
      .Page h2,
      .Page h3,
      .Page h4,
      .Page h5,
      .Page h6,
      .Page p,
      .Page span,
      .Page ul,
      .Page li,
      .Page a,
      .Page div {
        font-family: 'Helvetica', 'Arial', sans-serif;
        color: #444;
        margin: 0;
        text-decoration: none;
      }

      .Page h2 {
        font-size: 2.5rem;
        font-weight: 600;
        border-bottom: 3px solid #24292e;
        margin-bottom: var(--space-2)
      }

      .Page h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: var(--space-2);
      }

      .Page h4 {
        font-weight: 600;
        margin-bottom: var(--space-2);
      }

      .Page h5 {
        font-weight: 500;
        margin-bottom: var(--space-1);
      }

      .Page ul {
        padding: 0 0 0 var(--space-4);
      }

      .Page li {
        margin: var(--space-2) 0;
      }

      .Page a {
        font-size: inherit;
        font-weight: inherit;
      }

      .Page h3 a {
        font-size: inherit;
        line-height: 1.1;
      }

      .Page p {
        margin-bottom: var(--space-2);
      }

      .Page p,
      .Page span,
      .Page li,
      .Page a {
        font-size: 1rem;
        line-height: 1.25;
      }

      .Header {
        width: 100%;
        display: flex;
        align-items: stretch;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: stretch;
        line-height: 1.05
      }

      .Header .Header__left {
        width: auto;
        flex-grow: 1;
        margin: auto;
      }

      .Header .Header__name {
        font-size: 5rem;
      }

      .Header .Header__contact-info {
        flex-grow: 0;
        margin: 0;
        display: flex;
        align-items: flex-end;
        justify-content: space-evenly;
        flex-direction: column;
        text-align: right;
        font-weight: 400;
        font-size: 0.75rem;
      }

      .Header .Header__contact-info > * {
        display: inline-flex;
        flex-direction: row;
        align-items: baseline;
      }

      .Header .Header__contact-info .icon {
        width: var(--space-6);
        height: var(--space-6);
        margin: auto;
      }

      .Header .Header__contact-info .icon + span {
        margin-left: var(--space-1)
      }

      div.Summary {
        text-align: left;
        font-weight: 400;
        font-size: 1.25rem;
        /* margin: 0 auto; */
        /* text-align: justify; */
        /* border: 1px solid grey; */
        /* padding: var(--space-3); */
      }

      .Body {
        display: flex;
        width: 100%;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: stretch;
        gap: var(--space-10);
        flex-grow: 1;
        flex-basis: 0;
      }

      .Body hr {
        border-top: 1px solid #24292e;
        width: 100%;
        margin: 0;
      }

      .Body>div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: stretch;
      }

      .WorkExperience {
        flex-grow: 0;
        width: 6in;
      }

      div.JobRow {
        display: flex;
        margin-top: var(--space-4);
      }

      .JobRow--large {
        flex-direction: row;
        gap: var(--space-6);
      }

      .JobRow--large .JobRow__summary {
        flex-grow: 0;
        display: flex;
        width: 10rem;
        align-items: flex-start;
        justify-content: flex-start;
        flex-direction: column;
      }

      .JobRow .JobRow__bullets {
        flex-grow: 1;
        flex-basis: 0;
      }

      .JobRow--small {
        flex-direction: column;
        gap: var(--space-2);
      }

      .JobRow--small .JobRow__summary {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        max-height: 50px;
      }

      .JobRow--small .JobRow__summary h5 {
        align-self: flex-end;
      }

      .Sidebar {
        flex-grow: 1;
        flex-basis: 14rem;
      }

      .SidebarItem {
        display: flex;
        flex-direction: column;
      }

      .Footer {
        align-self: center;
        font-size: 0.875rem;
        font-style: italic;
      }

      .Footer code {
        font-style: normal;
      }

    </style>
  </head>
  <body><div class="Page">
    {{#with basics}}
      <header class="Header">
        <div class="Header__left">
          <h1 class="Header__name">
            {{name}}
          </h1>
        </div>
        <div class="Header__contact-info">
          {{#with location}}
            <span>{{address}}, {{city}}, {{regionCode}}, {{postalCode}}</span>
          {{/with}}
          <span>{{email}}</span>
          <span>{{phone}}</span>
          {{#each profiles}}
            <a href="{{url}}">
              {{#ifEquals network "Github"}}
                <svg class="icon" viewBox="0 0 24 24">
                  <path
                    fill="#000000"
                    d="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C9.34,21.58 9.5,21.27 9.5,21C9.5,20.77 9.5,20.14 9.5,19.31C6.73,19.91 6.14,17.97 6.14,17.97C5.68,16.81 5.03,16.5 5.03,16.5C4.12,15.88 5.1,15.9 5.1,15.9C6.1,15.97 6.63,16.93 6.63,16.93C7.5,18.45 8.97,18 9.54,17.76C9.63,17.11 9.89,16.67 10.17,16.42C7.95,16.17 5.62,15.31 5.62,11.5C5.62,10.39 6,9.5 6.65,8.79C6.55,8.54 6.2,7.5 6.75,6.15C6.75,6.15 7.59,5.88 9.5,7.17C10.29,6.95 11.15,6.84 12,6.84C12.85,6.84 13.71,6.95 14.5,7.17C16.41,5.88 17.25,6.15 17.25,6.15C17.8,7.5 17.45,8.54 17.35,8.79C18,9.5 18.38,10.39 18.38,11.5C18.38,15.32 16.04,16.16 13.81,16.41C14.17,16.72 14.5,17.33 14.5,18.26C14.5,19.6 14.5,20.68 14.5,21C14.5,21.27 14.66,21.59 15.17,21.5C19.14,20.16 22,16.42 22,12A10,10 0 0,0 12,2Z"
                  ></path>
                </svg>
              {{/ifEquals}}
              {{#ifEquals network "Linkedin"}}
                <svg
                  class="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                ><path
                    d="M0 0v24h24v-24h-24zm8 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.397-2.586 7-2.777 7 2.476v6.759z"
                  ></path></svg>
              {{/ifEquals}}
              <span>{{username}}</span>
            </a>
          {{/each}}
        </div>
      </header>
      {{#if summary}}
        <div class="Summary">{{summary}}</div>
      {{/if}}
    {{/with}}

    {{#if softSkills}}
      {{#each softSkills}}
        <div style="margin-top: -0.25em; margin-bottom: -0.25em">
          <h3 style="display: inline;">{{name}}</h3>
          {{summary}}
        </div>
      {{/each}}
    {{/if}}

    <div class="Body">
      <div class="WorkExperience">
        <h2>Work Experience</h2>
        {{#each work}}
          {{#if highlights}}
            <div class="JobRow JobRow--large">
              <div class="JobRow__summary">
                <h3><a href="{{website}}">{{breaklines company}}</a></h3>
                <h4>{{breaklines position}}</h4>
                <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
                <h5>{{location}}</h5>
              </div>
              <ul class="JobRow__bullets">
                {{#each highlights}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          {{else}}
            <div class="JobRow JobRow--small">
              <div class="JobRow__summary">
                <h3><a href="{{website}}">{{company}}</a></h3>
                <h4>{{position}}</h4>
                <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
                <h5>{{location}}</h5>
              </div>
              <p>{{summary}}</p>
            </div>
          {{/if}}
          <hr />
        {{/each}}
      </div>
      <div class="Sidebar">
        <h2>Education</h2>
        {{#each education}}
          <div class="SidebarItem">
            <h3>{{institution}}</h3>
            <h4>
              {{breaklines area}}
            </h4>
            <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
            <p style="margin-top: 4px">
              <em>{{gpa}}/4.0 Equivalent GPA</em><br>
              {{summary}}
            </p>
          </div>
          {{#unless @last}}
            <hr />
          {{/unless}}
        {{/each}}
        <h2>Projects</h2>
        {{#each publications}}
          <div class="SidebarItem">
            <h3>
              <a href="{{website}}">
                {{name}}
              </a>
            </h3>
            {{#if publisher}}
              <h4>{{breaklines publisher}}</h4>
            {{/if}}
            <h5>{{monthFormat releaseDate}}</h5>
            <p style="margin-top: 4px">
              {{summary}}
            </p>
          </div>
          <hr />
        {{/each}}
        {{#if volunteer}}
          <h1>Volunteering</h1>
        {{/if}}
        {{#each volunteer}}
          <div class="SidebarItem">
            <h3>{{position}}</h3>
            <h4>
              {{breaklines organization}}
            </h4>
            <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
            <p style="margin-top: 4px">
              {{summary}}
            </p>
          </div>
        {{/each}}
      </div>
    </div>
    <footer class="Footer">
      This resume made with Handlebars, HTML, CSS, and nine unique <code>display:</code>&hairsp;<code>flex</code>es
    </footer>
  </div></body>

</html>
