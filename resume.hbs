<body class="markdown-body">
  <div style="border-style: hidden; width: 8.5in; height: 11in; padding: 0.125in 0.25in 0.125in 0.25in; margin: 0em;">
    <div class="container" style="line-height: 1.1">
      {{#with basics}}
        <div class="big_col">
          <h1 style="font-size: 4.5em;">
            {{name}}
          </h1>
        </div>
        <div class="small_col" style="margin-bottom: 0; margin-top: auto; flex-basis: 45%;">
          <span style="width: 100%; float: right; text-align: right;">
            <span style="font-weight: 400; font-size: 14px;">
              {{#with location}}
                {{address}}, {{city}}, {{regionCode}}, {{postalCode}}<br>
              {{/with}}
              {{email}} <br>
              {{phone}} <br>
            </span>
            {{#each profiles}}
              {{#ifEquals network "Github"}}
                <svg style="width:16px;height:16px; margin: -4px;" viewBox="0 0 24 24">
                  <path fill="#000000" d="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C9.34,21.58 9.5,21.27 9.5,21C9.5,20.77 9.5,20.14 9.5,19.31C6.73,19.91 6.14,17.97 6.14,17.97C5.68,16.81 5.03,16.5 5.03,16.5C4.12,15.88 5.1,15.9 5.1,15.9C6.1,15.97 6.63,16.93 6.63,16.93C7.5,18.45 8.97,18 9.54,17.76C9.63,17.11 9.89,16.67 10.17,16.42C7.95,16.17 5.62,15.31 5.62,11.5C5.62,10.39 6,9.5 6.65,8.79C6.55,8.54 6.2,7.5 6.75,6.15C6.75,6.15 7.59,5.88 9.5,7.17C10.29,6.95 11.15,6.84 12,6.84C12.85,6.84 13.71,6.95 14.5,7.17C16.41,5.88 17.25,6.15 17.25,6.15C17.8,7.5 17.45,8.54 17.35,8.79C18,9.5 18.38,10.39 18.38,11.5C18.38,15.32 16.04,16.16 13.81,16.41C14.17,16.72 14.5,17.33 14.5,18.26C14.5,19.6 14.5,20.68 14.5,21C14.5,21.27 14.66,21.59 15.17,21.5C19.14,20.16 22,16.42 22,12A10,10 0 0,0 12,2Z" />
                </svg>
              {{/ifEquals}}
              <a href="{{url}}">
                {{username}}
              </a>
              <br>
            {{/each}}
          </span>
        </div>
      </div>
    {{/with}}
    <style>
    .container {
      display: flex;
      width: 100%;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: space-between;
      align-items: stretch;
    }
    .big_col{
      flex-grow: 1;
      flex-basis: 50%;
    }
    .spacer_col{
      flex-grow: 0;
      flex-basis: 3%;
    }
    .small_col{
      flex-grow: 0;
      flex-basis: 32%;
    }
    .big_col, .small_col {
      margin-top: 0;
      margin-left: 4px;
      margin-right: 4px;
      margin: auto;
      height: 100%;
      display: flex;
      flex-direction: column;
      flex-wrap: nowrap;
      justify-content: space-between;
      align-items: flex-start;
    }
    .underlined {
      border-bottom: 1px solid #24292e;
    }
    hr {
      border-top: 1px solid #24292e;
      width: 100%;
      margin: 0;
    }
    </style>
    <div class="container" style="height: 9.75in;">
      <div class="big_col">
        <div class="header-row">
          <h1>Work Experience</h1>
        </div>
        {{#each work}}
          {{#if highlights}}
            <div class="job-row">
              <table>
                <tr>
                  <td class="details-col">
                    <h3><a href="{{website}}">{{company}}</a></h3>
                    <br>
                    <h4>{{position}}</h4>
                    <br>
                    <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
                    <br>
                    <h5>{{location}}</h5>
                  </td>
                  <td>
                    <ul>
                      {{#each highlights}}
                      <li>{{this}}</li>
                      {{/each}}
                    </ul>
                  </td>
                </tr>
              </table>
            </div>
          {{else}}
            <div class="job-row">
              <h3><a href="{{website}}">{{company}}</a></h3>
              <br>
              <h4>{{position}}</h4>
              <span style="float: right; text-align: right;">
                <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
              </span>
              <h5> {{location}} </h5>
              <br>
              <p>
                {{summary}}
              </p>
            </div>
          {{/if}}
          <hr>
        {{/each}}
      </div>
      <div class="spacer_col"></div>
      <div class="small_col">
        <div class="header-row">
          <h1>Education</h1>
        </div>
        {{#each education}}
          <div class="employer-row">
            <h3>{{institution}}</h3>
            <br>
            <h4>
              {{breaklines area}}
            </h4>
            <br>
            <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
            <br>
            <p style="margin-top: 4px">
              {{gpa}}/4.0 Equivalent GPA
              <br>
              {{summary}}
            </p>
          </div>
          {{#unless @last}}
            <hr>
          {{/unless}}
        {{/each}}
        <div class="header-row">
          <h1>Projects</h1>
        </div>
        {{#each publications}}
          <div class="employer-row">
            <h3>
              <a href="{{website}}">
                {{ name }}
              </a>
            </h3>
            <br>
            <h4>{{breaklines publisher}}</h4>
            <br>
            <h5>{{monthFormat releaseDate}}</h5>
            <br>
            <p style="margin-top: 4px">
              {{summary}}
            </p>
          </div>
          <hr>
        {{/each}}
        {{#if volunteer}}
          <div class="header-row">
            <h1>Volunteering</h1>
          </div>
        {{/if}}
        {{#each volunteer}}
          <div class="employer-row underlined">
            <h3>{{position}}</h3>
            <br>
          </td>
          <h4>
            {{breaklines organization}}
          </h4>
          <br>
          <h5>{{monthFormat startDate}} - {{monthFormat endDate}}</h5>
          <p style="margin-top: 4px">
            {{summary}}
          </p>
        </div>
      {{/each}}
    </div>
  </div>
</div>
</body>
